<!DOCTYPE html>
<html>
<head>
  <title>Puddy</title>

  <%= javascript_include_tag "application" %>

  <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>

  <%= stylesheet_link_tag "puddy/application", "application", "admin", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2 well sidebar">
      <ul class="nav nav-list">
        <li><%= link_to 'Home', root_path %></li>

        <li class="divider"></li>

        <li class="nav-header">Transactions</li>
        <li><%= link_to "All transactions", transactions_path %></li>
        <li><%= link_to "Successful", successful_transactions_path %></li>
        <li><%= link_to "Failed", failed_transactions_path %></li>

        <li class="divider"></li>

        <li class="nav-header">Accounts</li>
        <li><%= link_to 'All accounts', accounts_path %></li>
      </ul>
    </div>

    <div class="span10 well main-content">
      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
