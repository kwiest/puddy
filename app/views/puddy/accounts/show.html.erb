<h1><%= @account.name %></h1>
<%= @account.print_address %>
<%= @account.print_contact_info %>

<h3>Account camps</h3>
<ul>
  <% @account.camps.each do |camp| %>
    <li><%= link_to camp.name %></li>
  <% end %>
</ul>

<h3>Account invoices</h3>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Status</th>
      <th>View PDF</th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date %></td>
        <td><%= invoice.amount.format %></td>
        <td><%= invoice.state %></td>
        <td><%= link_to 'View PDF', account_invoice_path(@account, invoice) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</ul>
